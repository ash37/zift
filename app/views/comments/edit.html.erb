<turbo-frame id="<%= dom_id(@comment) %>">
  <%= form_with model: @comment, url: comment_path(@comment), method: :patch, data: { turbo_stream: true }, html: { multipart: true } do |f| %>
    <div id="<%= dom_id(@comment, :errors) %>" class="text-sm text-red-600 mb-2"></div>
    <div>
      <%= f.text_area :body, rows: 3, class: "block w-full rounded-xl border border-gray-300 p-3 text-sm" %>
    </div>
    <div class="mt-2 flex items-center justify-between">
      <label class="px-3 py-1 rounded-lg bg-gray-100 text-gray-800 hover:bg-gray-200 text-sm cursor-pointer">
        Attach files
        <%= f.file_field :files, multiple: true, direct_upload: true, class: 'sr-only' %>
      </label>
      <div class="flex items-center gap-2">
        <%= f.submit 'Save', class: 'px-3 py-1.5 rounded-lg bg-violet-600 text-white text-sm hover:bg-violet-700' %>
      </div>
    </div>
  <% end %>
</turbo-frame>

