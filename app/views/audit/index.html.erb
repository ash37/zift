<div class="bg-zinc-100 min-h-screen py-10 px-4 sm:px-6 lg:px-8">
  <div class="max-w-6xl mx-auto space-y-8">
    <div class="bg-white rounded-3xl shadow-sm p-8">
      <h1 class="text-3xl font-bold text-gray-900">Audit Dashboard</h1>
      <p class="mt-2 text-gray-600">Snapshot of recent activity across participants, team members, and incidents.</p>
    </div>

    <div class="bg-white rounded-3xl shadow-sm p-6">
      <h2 class="text-xl font-semibold text-gray-900">Employees</h2>
      <p class="text-sm text-gray-500">All current Qcare employees</p>
      <ul class="mt-4 space-y-2 divide-y divide-gray-100">
        <% @active_employees.each do |employee| %>
          <li class="py-3 space-y-1">
            <div class="flex items-center justify-between text-sm text-gray-800">
              <span class="font-medium"><%= employee.name %></span>
              <%= employee.email %>
            </div>
            <div class="text-xs text-gray-500"><%= gender_badge(employee) %></div>
          </li>
        <% end %>
        <% if @active_employees.empty? %>
          <li class="py-4 text-sm text-gray-500">No active employees found.</li>
        <% end %>
      </ul>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <div class="bg-white rounded-3xl shadow-sm p-6">
        <h2 class="text-xl font-semibold text-gray-900">Recent Users</h2>
        <ul class="mt-4 space-y-3">
          <% @recent_users.each do |user| %>
            <li class="flex items-center justify-between text-sm text-gray-700">
              <span><%= user.name %></span>
              <span class="text-xs text-gray-500"><%= user.created_at.strftime('%d %b %Y') %></span>
            </li>
          <% end %>
        </ul>
      </div>

      <div class="bg-white rounded-3xl shadow-sm p-6">
        <h2 class="text-xl font-semibold text-gray-900">Recent Participants</h2>
        <ul class="mt-4 space-y-3">
          <% @recent_locations.each do |location| %>
            <li class="flex items-center justify-between text-sm text-gray-700">
              <span><%= location.name %></span>
              <span class="text-xs text-gray-500"><%= location.created_at.strftime('%d %b %Y') %></span>
            </li>
          <% end %>
        </ul>
      </div>

      <div class="bg-white rounded-3xl shadow-sm p-6">
        <h2 class="text-xl font-semibold text-gray-900">Recent Incidents</h2>
        <ul class="mt-4 space-y-3">
          <% @recent_incidents.each do |incident| %>
            <li class="flex items-center justify-between text-sm text-gray-700">
              <span><%= incident.category %></span>
              <span class="text-xs text-gray-500"><%= incident.created_at.strftime('%d %b %Y') %></span>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
