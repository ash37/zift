<%= form_with(model: recurrence, class: "contents") do |form| %>
  <% if recurrence.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(recurrence.errors.count, "error") %> prohibited this recurrence from being saved:</h2>

      <ul class="list-disc ml-6">
        <% recurrence.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :frequency %>
    <%= form.text_field :frequency, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": recurrence.errors[:frequency].none?, "border-red-400 focus:outline-red-600": recurrence.errors[:frequency].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :interval %>
    <%= form.number_field :interval, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": recurrence.errors[:interval].none?, "border-red-400 focus:outline-red-600": recurrence.errors[:interval].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :ends_on %>
    <%= form.date_field :ends_on, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": recurrence.errors[:ends_on].none?, "border-red-400 focus:outline-red-600": recurrence.errors[:ends_on].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
