  <style>
    :root {
      --purple-50: #f5f3ff;
      --purple-600: #7e22ce;
      --purple-700: #6b21a8;
      --purple-800: #581c87;
      --gray-50: #f9fafb;
      --gray-100: #f3f4f6;
      --gray-200: #e5e7eb;
      --gray-600: #4b5563;
      --gray-700: #374151;
      --gray-800: #1f2937;
      --black: #000;
      --white: #fff;
      --container: 1200px;
      --radius-xl: 1rem;
    }

    html, body { font-family: "Lato", system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif; margin: 0; color: var(--gray-800); background: #fff; scroll-behavior: smooth; }

    /* Containers & utilities */
    .container { max-width: var(--container); margin: 0 auto; padding: 0 16px; }
    .btn { display:inline-block; background: var(--purple-700); color:#fff; font-weight:500; padding:10px 20px; border-radius:999px; text-decoration:none; transition:background .2s ease; }
    .btn_log_in { display:inline-block; background: var(--gray-100); color:#333333; font-weight:500; padding:10px 20px; border-radius:999px; text-decoration:none; transition:background .2s ease; }
    .btn:hover { background: var(--gray-200); }
    .visually-hidden { position:absolute; left:-9999px; top:auto; width:1px; height:1px; overflow:hidden; }

    /* Call bar */
    .callbar { display:block; width:100%; text-align:center; padding:10px 16px; background: var(--purple-50); color: var(--purple-700); font-weight:400; text-decoration:none; }
    .callbar:hover { background:#ede9fe; }

    /* Header / Nav */
    header { position: relative; z-index: 20; background: #fff; }
    .nav { display:flex; align-items:center; justify-content:space-between; padding: 20px 0; }
    .brand img { height:44px; vertical-align:middle; }
    .nav-links { display:flex; align-items:center; gap:20px; }
    .nav-links a { color: var(--gray-600); font-weight:400; text-decoration:none; }
    .nav-links a:hover { color: var(--purple-800); }
    /* Ensure button color inside nav is not overridden */
    .nav-links .btn, a.btn { color:#fff; }

    /* Mobile menu (CSS only) */
    #nav-toggle { display:none; }
    .hamburger { display:none; background:none; border:0; font-size:28px; cursor:pointer; }

    @media (max-width: 992px) {
      .hamburger { display:block; }
      .nav-links { display:none; flex-direction:column; align-items:flex-start; padding:16px 0; }
      #nav-toggle:checked ~ .nav-links { display:flex; }
    }

    /* Hero */
    .hero { position:relative; overflow:hidden; background:#fff; }
    .hero-inner { position:relative; z-index: 1; }
    .hero-grid { display:grid; grid-template-columns: 1fr; padding: 10px 0 130px; }
    .hero h1 { font-size: 44px; line-height:1.1; margin: 0; font-weight: 600; color:#2e1065; text-shadow: 0 0 6px #fff, 0 0 10px #fff; }
    .hero h1 .accent { color: var(--purple-700); text-shadow: 0 0 6px #fff, 0 0 10px #fff; }

    .hero-bg-mobile, .hero-bg-desktop { position:absolute; inset:0; z-index:0; display:none; }
    .hero-bg-mobile img, .hero-bg-desktop img { width:100%; height:100%; object-fit:cover; }

    .hero-cta { display:none; justify-content:center; padding: 16px 0 24px; }

    @media (max-width: 767px) {
      .hero-grid { padding-bottom: 80px; }
      .hero h1 { font-size: 36px; }
      .hero-bg-mobile { display:block; }
      .hero-cta { display:flex; }
    }
    @media (min-width: 768px) {
      .hero-bg-desktop { display:flex; align-items:center; justify-content:center; background:#fff; }
      .hero h1 { font-size: 64px; }
      .hero-grid { grid-template-columns: 2fr 1fr; padding-bottom: 260px; }
    }

    /* Three feature cards */
    .strip { background:#000; color:#fff; }
    .cards { display:grid; gap:24px; padding: 24px 0 32px; }
    .card { background: #f3f4f6; color: #111; border-radius: var(--radius-xl); padding: 24px; text-align:center; }
    .card h3 { margin: 0 0 8px; font-size: 20px; color: #111; font-weight:600; }
    .card p { margin: 0 0 12px; color:#6b7280; }
    .card a { color: var(--purple-700); text-decoration:none; font-weight:400; font-size:14px; }
    .card a:hover { text-decoration:underline; }

    @media (min-width: 768px) { .cards { grid-template-columns: repeat(3, 1fr); } }

    /* Section heading */
    .section { background:#fff; padding: 20px 0; }
    .section .heading { text-align:center; max-width: 760px; margin: 0 auto; padding: 20px 0; }
    .section .heading h2 { font-size: 44px; margin: 0; font-weight:700; }
