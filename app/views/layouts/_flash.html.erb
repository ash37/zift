<% if flash.any? %>
  <div class="fixed top-4 left-1/2 -translate-x-1/2 sm:left-auto sm:right-4 sm:translate-x-0 z-50 space-y-2 pointer-events-none mt-2">
    <% flash.each do |type, message| %>
      <% next if type == "notice" && ["Signed in successfully.", "Signed out successfully."].include?(message) %>
      <% classes = if type == "alert"
                     "bg-red-100 text-red-700 border-red-400"
                   else
                     "bg-violet-100 text-violet-700 border-violet-400"
                   end %>
      <div class="pointer-events-auto rounded-3xl px-8 py-2 border bg-white border-violet-500 #{classes} opacity-100 transition-opacity duration-500"
           data-controller="flash" data-flash-timeout-value="3000" role="alert">
        <p class="text-sm text-gray-500"><%= message %></p>
      </div>
    <% end %>
  </div>
<% end %>
