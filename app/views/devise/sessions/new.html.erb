<div class="bg-white dark:bg-gray-900">
  <div class="flex justify-center h-screen">
    <%# This div now uses the hero.gif as a full-bleed background image %>
    <div class="hidden bg-cover lg:block lg:w-2/3" style="background-image: url(<%= image_path 'hero.gif' %>)">
      <div class="flex items-center h-full px-20 bg-gray-900 bg-opacity-40">
        <div>
          <h2 class="text-2xl font-bold text-white sm:text-3xl">Qcare</h2>
          <p class="max-w-xl mt-3 text-gray-300">
            
          </p>
        </div>
      </div>
    </div>

    <div class="flex items-center w-full max-w-md px-6 mx-auto lg:w-2/6">
      <div class="flex-1">
        <div class="text-center">
          <div class="flex justify-center mx-auto">
            <%= image_tag "qcare_logo.png", class: "w-auto h-8", alt: "Qcare Logo" %>
          </div>
          
          <p class="mt-3 text-gray-500 dark:text-gray-300">Sign in to access your account</p>
        </div>

        <div class="mt-8">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div>
              <%= f.label :email, class: "block mb-2 text-sm text-gray-600 dark:text-gray-200" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-lg dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-violet-400 focus:ring-violet-400 focus:outline-none focus:ring focus:ring-opacity-40" %>
            </div>

            <div class="mt-6">
              <div class="flex justify-between mb-2">
                <%= f.label :password, class: "text-sm text-gray-600 dark:text-gray-200" %>
                <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-sm text-gray-400 focus:text-violet-500 hover:text-violet-500 hover:underline" %>
              </div>
              <%= f.password_field :password, autocomplete: "current-password", class: "block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-lg dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-violet-400 focus:ring-violet-400 focus:outline-none focus:ring focus:ring-opacity-40" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="mt-4">
                <label class="inline-flex items-center">
                  <%= f.check_box :remember_me, class: "form-checkbox text-violet-600" %>
                  <span class="ml-2 text-sm text-gray-600 dark:text-gray-200">Remember me</span>
                </label>
              </div>
            <% end %>

            <div class="mt-6">
              <%= f.submit "Sign in", class: "w-full px-4 py-2 tracking-wide text-white transition-colors duration-300 transform bg-violet-500 rounded-3xl hover:bg-violet-400 focus:outline-none focus:bg-violet-400 focus:ring focus:ring-violet-300 focus:ring-opacity-50" %>
            </div>
          <% end %>
        </div>

        <p class="mt-6 text-sm text-center text-gray-400">
          Don't have an account yet?
          <%= link_to "Sign up", new_registration_path(resource_name), class: "text-violet-500 focus:outline-none focus:underline hover:underline" %>
        </p>
      </div>
    </div>
  </div>
</div>