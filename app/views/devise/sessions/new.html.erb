<div class="bg-white">
  <div class="flex justify-center items-start h-screen lg:items-center">
    

    <div class="flex items-center w-full max-w-md px-6 mx-auto lg:w-2/6">
      <div class="flex-1">
        <div class="text-center">
          
          
          <p class="mt-10 text-gray-500">Sign in to access your account</p>
        </div>

        <div class="mt-8">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div>
              <%= f.label :email, class: "block mb-2 text-sm text-gray-600" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-lg focus:border-violet-400 focus:ring-violet-400 focus:outline-none focus:ring focus:ring-opacity-40" %>
            </div>

            <div class="mt-6">
              <div class="flex justify-between mb-2">
                <%= f.label :password, class: "text-sm text-gray-600" %>
                
              </div>
              <%= f.password_field :password, autocomplete: "current-password", class: "block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-lg focus:border-violet-400 focus:ring-violet-400 focus:outline-none focus:ring focus:ring-opacity-40" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="mt-4">
                <label class="inline-flex items-center">
                  <%= f.check_box :remember_me, class: "form-checkbox text-violet-600" %>
                  <span class="ml-2 text-sm text-gray-600">Remember me</span>
                </label>
              </div>
            <% end %>

            <div class="mt-6">
              <%= f.submit "Sign in", class: "w-full px-4 py-2 tracking-wide text-white transition-colors duration-300 transform bg-violet-500 rounded-3xl hover:bg-violet-400 focus:outline-none focus:bg-violet-400 focus:ring focus:ring-violet-300 focus:ring-opacity-50" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>