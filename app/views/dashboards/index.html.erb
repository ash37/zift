<%
  today_shifts = current_user.shifts.includes(:timesheets).joins(:roster).where(rosters: { status: Roster::STATUSES[:published] }).where("shifts.start_time >= ? AND shifts.start_time < ?", Date.today.beginning_of_day, Date.today.end_of_day).order('shifts.start_time ASC')
  upcoming_shifts = current_user.shifts.joins(:roster).where(rosters: { status: Roster::STATUSES[:published] }).where("shifts.start_time >= ?", Date.tomorrow.beginning_of_day).order(:start_time).limit(5)
%>

<section class="container px-4 py-4 mx-auto bg-transparent">
  <h2 class="text-2xl font-bold text-gray-800 dark:text-white">Hi, <%= current_user.first_name %></h2>
  <p class="mt-2 text-gray-600 dark:text-gray-300">Here are your upcoming shifts.</p>

  <div class="mt-6 space-y-8">
    <div>
      <h3 class="text-md font-medium text-gray-700 dark:text-gray-200">Today</h3>
      <div class="mt-4 space-y-4">
        <% if today_shifts.any? %>
          <% today_shifts.each do |shift| %>
            <%
              timesheet = shift.timesheets.first
              missed_clock_on = false
              if timesheet.nil? && Time.current > (shift.start_time + 3.hours)
                timesheet = shift.timesheets.create(
                  user: current_user,
                  status: Timesheet::STATUSES[:pending],
                  clock_in_at: shift.start_time,
                  clock_out_at: shift.end_time,
                  notes: "Auto-generated: Missed clock on."
                )
                missed_clock_on = true
              elsif timesheet&.notes&.include?("Auto-generated") && timesheet.pending?
                missed_clock_on = true
              end
            %>
            <div class="p-4 bg-white rounded-lg  flex justify-between items-center">
              <div class="flex items-center gap-x-3">
                <% if missed_clock_on %>
                  <div title="Missed clock on. A timesheet has been automatically created for review.">
                    <svg class="w-6 h-6 text-red-500" fill="currentColor" viewBox="0 0 20 20" xmlns="[http://www.w3.org/2000/svg](http://www.w3.org/2000/svg)"><path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.21 3.03-1.742 3.03H4.42c-1.532 0-2.492-1.696-1.742-3.03l5.58-9.92zM10 13a1 1 0 110-2 1 1 0 010 2zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path></svg>
                  </div>
                <% end %>
                <div>
                  <p class="font-semibold"><%= shift.location.name %></p>
                  <p class="text-sm text-gray-600"><%= format_shift_time(shift.start_time) %> - <%= format_shift_time(shift.end_time) %></p>
                </div>
              </div>
              <%= render 'shift_actions', shift: shift, upcoming: false, timesheet: timesheet %>
            </div>
          <% end %>
        <% else %>
          <p class="text-gray-500">No shifts scheduled for today.</p>
        <% end %>
      </div>
    </div>

    <div>
      <h3 class="text-md font-medium text-gray-700 dark:text-gray-200">Upcoming</h3>
      <div class="mt-4 space-y-4">
        <% if upcoming_shifts.any? %>
          <% upcoming_shifts.each do |shift| %>
            <div class="p-4 bg-white rounded-lg flex justify-between items-center">
              <div>
                <p class="font-semibold"><%= shift.location.name %></p>
                <p class="text-sm text-gray-600"><%= shift.start_time.strftime("%a, %d %b") %>: <%= format_shift_time(shift.start_time) %> - <%= format_shift_time(shift.end_time) %></p>
              </div>
              <%= render 'shift_actions', shift: shift, upcoming: true %>
            </div>
          <% end %>
        <% else %>
          <p class="text-gray-500">No upcoming shifts.</p>
        <% end %>
      </div>
    </div>
  </div>
</section>