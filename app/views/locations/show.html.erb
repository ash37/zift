<%# app/views/locations/show.html.erb %>
<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <section class="relative max-w-4xl p-6 mx-auto bg-white rounded-md shadow-md dark:bg-gray-800">
    <%# 'Back to locations' link, styled as an 'x' icon in the top-right corner. %>
    <%= link_to locations_path, class: "absolute top-0 right-0 mt-4 mr-4 text-gray-400 hover:text-gray-600 dark:hover:text-gray-300" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
      </svg>
    <% end %>

    <div class="flex justify-between items-center">
        <h2 class="text-lg font-semibold text-gray-700 capitalize dark:text-white">Location Details</h2>
        
    </div>


    <div class="mt-6 grid grid-cols-1 gap-6 sm:grid-cols-2">
      <div>
        <label class="text-gray-700 dark:text-gray-200">Name</label>
        <p class="block w-full px-4 py-2 mt-2 text-gray-700 bg-gray-100 border border-gray-200 rounded-md dark:bg-gray-700 dark:text-gray-300 dark:border-gray-600"><%= @location.name %></p>
      </div>

      <div>
        <label class="text-gray-700 dark:text-gray-200">Address</label>
        <p class="block w-full px-4 py-2 mt-2 text-gray-700 bg-gray-100 border border-gray-200 rounded-md dark:bg-gray-700 dark:text-gray-300 dark:border-gray-600"><%= @location.address %></p>
      </div>
    </div>
    <div class="flex justify-end items-center w-full mt-4">
      <%= link_to "Edit Location", edit_location_path(@location), class: "px-4 py-2 text-sm font-medium text-white bg-zinc-800 rounded-md hover:bg-zinc-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-zinc-500" %>
     </div>
    <hr class="my-8">

    <%# Areas Section %>
    <div>
      <div class="flex justify-between items-center mb-4">
        <h3 class="text-lg font-semibold text-gray-700 capitalize dark:text-white">Areas</h3>
      </div>

     

      <%# Areas Table %>
      <div class="flex flex-col mt-6">
        <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
          <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
            <div class="overflow-hidden border border-gray-200 dark:border-gray-700 md:rounded-lg">
              <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                <thead class="bg-gray-50 dark:bg-gray-800">
                  <tr>
                    <th scope="col" class="py-3.5 px-4 text-sm font-normal text-left rtl:text-right text-gray-500 dark:text-gray-400">Name</th>
                    <th scope="col" class="px-12 py-3.5 text-sm font-normal text-left rtl:text-right text-gray-500 dark:text-gray-400">Export Code</th>
                    <th scope="col" class="px-4 py-3.5 text-sm font-normal text-left rtl:text-right text-gray-500 dark:text-gray-400">Color</th>
                    <th scope="col" class="relative py-3.5 px-4"><span class="sr-only">Actions</span></th>
                  </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200 dark:divide-gray-700 dark:bg-gray-900">
                  <% @areas.each do |area| %>
                    <tr>
                      <td class="px-4 py-4 text-sm font-medium text-gray-700 whitespace-nowrap dark:text-white"><%= area.name %></td>
                      <td class="px-12 py-4 text-sm font-medium text-gray-700 whitespace-nowrap dark:text-white"><%= area.export_code %></td>
                      <td class="px-4 py-4 text-sm text-gray-500 dark:text-gray-300 whitespace-nowrap">
                        <div class="w-6 h-6 rounded" style="background-color: <%= area.color %>;"></div>
                      </td>
                      <td class="px-4 py-4 text-sm whitespace-nowrap text-right">
                        <%# Action buttons can go here later %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
      <%# New Area Form %>
      <%= form_with(model: [@location, @area], class: "mt-4 grid grid-cols-1 gap-6 sm:grid-cols-4 items-end") do |form| %>
        <div>
          <%= form.label :name, class: "text-gray-700 dark:text-gray-200 text-sm" %>
          <%= form.text_field :name, class: "block w-full px-4 py-2 mt-1 text-gray-700 bg-white border border-gray-200 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring" %>
        </div>
        <div>
          <%= form.label :export_code, class: "text-gray-700 dark:text-gray-200 text-sm" %>
          <%= form.text_field :export_code, class: "block w-full px-4 py-2 mt-1 text-gray-700 bg-white border border-gray-200 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring" %>
        </div>
        <div>
          <%= form.label :color, class: "text-gray-700 dark:text-gray-200 text-sm" %>
          <%= form.color_field :color, class: "block w-full h-10 px-1 py-1 mt-1 bg-white border border-gray-200 rounded-md dark:bg-gray-800 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring" %>
        </div>
        <div class="flex justify-end items-center w-full mt-4">
          <%= form.submit "Add Area", class: "px-4 py-2 text-sm font-medium text-white bg-zinc-800 rounded-md hover:bg-zinc-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-zinc-500" %>
        </div>
      <% end %>
    </div>
  </section>
</div>
