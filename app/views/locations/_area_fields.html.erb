<div class="nested-fields p-8 rounded-3xl bg-white">
  <div class="grid grid-cols-1 gap-6 sm:grid-cols-4 items-end">
    <div>
      <%= form.label :name, "Area Name", class: "text-gray-700 dark:text-gray-200 text-sm" %>
      <%= form.text_field :name, class: "block w-full px-4 py-2 mt-1 text-gray-700 bg-white border border-gray-200 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring" %>
    </div>

    <div>
      <%= form.label :export_code, class: "text-gray-700 dark:text-gray-200 text-sm" %>
      <%= form.text_field :export_code, class: "block w-full px-4 py-2 mt-1 text-gray-700 bg-white border border-gray-200 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring" %>
    </div>

    <div data-controller="color-picker">
      <%= form.label :color, class: "text-gray-700 dark:text-gray-200 text-sm" %>
      <%= form.hidden_field :color, data: { 'color-picker-target': 'input' } %>
      <div class="flex space-x-2 mt-2">
        <% colors = ['#ffffff', '#00a2e8', '#c80080', '#ff5c00', '#ff9300', '#8059ff'] %>
        <% colors.each do |color| %>
          <div data-action="click->color-picker#select" data-color="<%= color %>" class="w-8 h-8 rounded-full cursor-pointer border-2 border-gray-200" style="background-color: <%= color %>;"></div>
        <% end %>
      </div>
    </div>
    
    <div class="text-right">
      <%= form.hidden_field :_destroy %>
      <%# This link requires JavaScript to function correctly %>
      <a href="#" data-action="click->nested-form#remove" class="text-red-500 hover:text-red-700 text-sm">Remove Area</a>
    </div>
  </div>

<div class="mt-4">
  <div class="flex items-center justify-between">
    <h3 class="text-sm font-medium">Shift Questions</h3>
    <%= link_to "Add new question",
                new_shift_question_path,
                class: "text-sm underline hover:no-underline text-violet-600 hover:text-violet-800" %>
  </div>

  <div class="mt-2 space-y-2">
    <%= form.collection_check_boxes :shift_question_ids, ShiftQuestion.active.ordered, :id, :question_text do |cb| %>
      <div class="flex items-start gap-2">
        <%= cb.check_box class: "mt-1" %>
        <%= cb.label class: "text-sm" do %>
          <span class="font-medium"><%= cb.text %></span>
          <span class="ml-2 text-xs px-2 py-0.5 border rounded"><%= cb.object.question_type %></span>
          <% if cb.object.is_mandatory %>
            <span class="ml-2 text-xs">â€¢ mandatory</span>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<div class="mt-4">
  <div class="mt-2 grid grid-cols-1 sm:grid-cols-2 gap-4">
    <label class="inline-flex items-center gap-2">
      <%= form.check_box :show_timesheet_notes,
                         { checked: form.object.show_timesheet_notes.nil? ? true : form.object.show_timesheet_notes,
                           class: "rounded" } %>
      <span class="text-sm">Shift summary notes</span>
    </label>
    <label class="inline-flex items-center gap-2">
      <%= form.check_box :show_timesheet_travel,
                         { checked: form.object.show_timesheet_travel.nil? ? true : form.object.show_timesheet_travel,
                           class: "rounded" } %>
      <span class="text-sm">Log travel</span>
    </label>
  </div>
</div>
</div>