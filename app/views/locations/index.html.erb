<% content_for :title, "Clients" %>

<section class="container px-4 py-4 mx-auto">
  <div class="flex justify-between items-center">
    <%# Left Side: Title and location count %>
    <div class="flex items-center gap-x-3">
      <h2 class="text-lg font-medium text-gray-800">Clients</h2>
    </div>

    <%# Right Side: filters and actions %>
    <div class="flex items-center gap-x-3">
      <div class="relative inline-block text-left" x-data="{ open: false }">
        <% current_label = case @status_filter
            when 'prospect' then 'Prospects'
            when 'archived' then 'Archived'
            else 'Active'
          end
        %>
        <button type="button"
                @click="open = !open"
                @keydown.escape.window="open = false"
                class="inline-flex items-center gap-x-2 rounded-3xl bg-gray-100 px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none"
                :aria-expanded="open">
          <span><%= current_label %></span>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-500" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 10.207l3.71-2.977a.75.75 0 111.06 1.06l-4.24 3.4a.75.75 0 01-.94 0l-4.24-3.4a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
          </svg>
        </button>
        <div x-cloak x-show="open" x-transition @click.outside="open = false" class="absolute right-0 z-50 mt-2 w-48 rounded-lg shadow-md bg-white focus:outline-none" style="display:none;">
          <div class="py-1" role="none">
            <%= link_to "Active", locations_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
            <%= link_to "Prospects", locations_path(status: 'prospect'), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
            <%= link_to "Archived", locations_path(status: 'archived'), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
          </div>
        </div>
      </div>

      <% if user_signed_in? %>
        <%= link_to "Add", new_location_path, class: "tracking-wide rounded-3xl px-3.5 py-2.5 bg-zinc-800 hover:bg-zinc-900 text-white" %>
      <% end %>
    </div>
  </div>

  <% compliance_check_enabled = current_user&.admin? %>
  <% current_service_agreement = Agreement.current_for('service') rescue nil %>
  <div class="flex flex-col mt-6">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
        <div class="overflow-hidden border border-gray-200 md:rounded-lg">
          <table class="min-w-full divide-y divide-gray-200">
            
            <tbody class="bg-white divide-y divide-gray-200">
              <% @locations.each do |location| %>
                <tr data-controller="clickable-row"
                    data-action="click->clickable-row#visit"
                    data-clickable-row-url-value="<%= location_path(location) %>"
                    class="cursor-pointer hover:bg-gray-50">

                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                    <div class="flex items-center gap-x-3">
                      <% if compliance_check_enabled %>
                        <% all_ok, missing = location_compliance_status(location, current_service_agreement) %>
                        <div class="w-10 h-10 rounded-full flex items-center justify-center <%= all_ok ? 'bg-green-100' : 'bg-orange-100' %>"
                             title="<%= all_ok ? 'All client documents complete' : missing.join(', ') %>"
                             aria-label="<%= all_ok ? 'All client documents complete' : missing.join(', ') %>">
                          <% if all_ok %>
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-green-500">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                            </svg>
                          <% else %>
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-orange-500">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9 3.75h.008v.008H12v-.008Z" />
                            </svg>
                          <% end %>
                        </div>
                      <% end %>
                      <span><%= location.name %></span>
                    </div>
                  </td>
                  <td class="hidden sm:table-cell px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= location.address %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>
