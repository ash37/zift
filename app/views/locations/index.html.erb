<% content_for :title, "Clients" %>

<section class="container px-4 py-4 mx-auto">
  <div class="flex justify-between items-center">
    <%# Left Side: Title and location count %>
    <div class="flex items-center gap-x-3">
    <% if params[:archived] == "true" %>
        <h2 class="text-lg font-medium text-gray-800">Archived Clients</h2>
      <% else %>
        <h2 class="text-lg font-medium text-gray-800">Clients</h2>
      <% end %>
    </div>

    <%# Right Side: Add location and filter buttons %>
    <div class="flex items-center gap-x-3">
      <% if params[:archived] == "true" %>
        <%= link_to "View Active", locations_path, class: "px-3 py-1 text-xs text-gray-600 bg-gray-100 rounded-full" %>
      <% else %>
        <%= link_to "View Archived", locations_path(archived: true), class: "px-3 py-1 text-xs text-gray-600 bg-gray-100 rounded-full" %>
      <% end %>
      <% unless params[:archived] == "true" %>
        <%= link_to "Add", new_location_path, class: "tracking-wide rounded-3xl px-3.5 py-2.5 bg-zinc-800 hover:bg-zinc-900 text-white" %>
      <% end %>
    </div>
  </div>

  <% compliance_check_enabled = current_user&.admin? %>
  <% current_service_agreement = Agreement.current_for('service') rescue nil %>
  <div class="flex flex-col mt-6">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
        <div class="overflow-hidden border border-gray-200 md:rounded-lg">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <% if compliance_check_enabled %>
                  <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                <% end %>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Name
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Address
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @locations.each do |location| %>
                <tr data-controller="clickable-row"
                    data-action="click->clickable-row#visit"
                    data-clickable-row-url-value="<%= location_path(location) %>"
                    class="cursor-pointer hover:bg-gray-50">

                  <% if compliance_check_enabled %>
                    <% all_ok, missing = location_compliance_status(location, current_service_agreement) %>
                    <td class="px-4 py-4 whitespace-nowrap">
                      <div class="w-10 h-10 rounded-full flex items-center justify-center <%= all_ok ? 'bg-green-100' : 'bg-orange-100' %>"
                           title="<%= all_ok ? 'All client documents complete' : missing.join(', ') %>"
                           aria-label="<%= all_ok ? 'All client documents complete' : missing.join(', ') %>">
                        <% if all_ok %>
                          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-green-500">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                          </svg>
                        <% else %>
                          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-orange-500">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9 3.75h.008v.008H12v-.008Z" />
                          </svg>
                        <% end %>
                      </div>
                    </td>
                  <% end %>

                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                    <%= location.name %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= location.address %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>
