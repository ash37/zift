<div class="bg-white p-4 mb-0">
  <div class="flex flex-col sm:flex-row justify-between sm:items-stretch">

    <!-- Left: Location selector + Date selector -->
    <div class="flex items-center gap-x-4">

      <!-- Location dropdown -->
      <div x-data="{ open: false }" class="relative">
        <button
          type="button"
          @click="open = !open"
          class="h-full flex items-center gap-x-2 px-4 py-3 bg-gray-100 rounded-3xl text-sm font-medium text-gray-700 hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-violet-500"
          aria-haspopup="true"
          :aria-expanded="open.toString()"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-violet-500" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
          </svg>
          <span><%= selected_location_id ? Location.find(selected_location_id).name : "All Locations" %></span>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </button>

        <!-- Location menu -->
        <div
          x-cloak
          x-show="open"
          x-transition
          @click.outside="open = false"
          @keydown.escape.window="open = false"
          class="absolute z-50 mt-2 w-56 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 focus:outline-none"
          style="display: none;"
        >
          <div class="py-1">
            <%= link_to "All Locations", roster_path(@roster, location_id: nil), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
            <% Location.all.each do |location| %>
              <%= link_to location.name, roster_path(@roster, location_id: location.id), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Date selector -->
      <div class="flex items-center gap-x-1 p-1 bg-gray-100 rounded-3xl">
        <%= link_to show_by_date_rosters_path(date: @roster.starts_on - 7.days, location_id: selected_location_id), class: "p-2 rounded-full hover:bg-gray-200" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        <% end %>

        <div class="px-3 py-1.5 text-center">
          <p class="text-sm font-medium text-gray-700">
            <%= @roster.starts_on.strftime('%-d %b') %> - <%= (@roster.starts_on + 6.days).strftime('%-d %b') %>
          </p>
        </div>

        <%= link_to show_by_date_rosters_path(date: @roster.starts_on + 7.days, location_id: selected_location_id), class: "p-2 rounded-full hover:bg-gray-200" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        <% end %>
      </div>
    </div>

    <!-- Right: Actions -->
    <div class="mt-4 sm:mt-0 flex items-center gap-x-2">
      <% if @roster.draft? %>
        <!-- Copy previous week -->
        <%= button_to copy_previous_week_roster_path(@roster), method: :post, class: "p-2 bg-gray-100 rounded-full hover:bg-gray-200" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-gray-600" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <rect x="4" y="8" width="12" height="12" rx="1" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"></rect>
            <path d="M8 6V5C8 4.448 8.448 4 9 4H19C19.552 4 20 4.448 20 5V15C20 15.552 19.552 16 19 16H18" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-dasharray="2 2"></path>
          </svg>
        <% end %>

        <!-- Publish dropdown (wider) -->
        <div x-data="{ open: false }" class="relative">
          <!-- Trigger -->
          <button
            type="button"
            @click="open = !open"
            class="bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-2 px-4 rounded-3xl"
            aria-haspopup="true"
            :aria-expanded="open.toString()"
          >
            Publish
          </button>

          <!-- Wider dropdown panel -->
          <div
            x-cloak
            x-show="open"
            x-transition
            @click.outside="open = false"
            @keydown.escape.window="open = false"
            class="absolute right-0 top-full mt-2 w-80 sm:w-96 max-w-[99vw] rounded-xl bg-white shadow-lg z-50"
            style="display: none;"
          >
            <div class="p-4 flex flex-col gap-3">

              <!-- Publish and Email -->
              <%= button_to publish_with_email_roster_path(@roster),
                    method: :post,
                    class: "w-full inline-flex items-center justify-center gap-2 rounded-3xl px-8 py-2.5
                            bg-yellow-500 text-white font-medium hover:bg-yellow-600 whitespace-nowrap" do %>
                
                <span>Publish & Email</span>
              <% end %>

              <!-- Publish Only -->
              <%= button_to publish_roster_path(@roster),
                    method: :post,
                    class: "w-full inline-flex items-center justify-center gap-2 rounded-3xl px-5 py-2.5
                            bg-gray-100 text-gray-700 font-medium hover:bg-gray-200 whitespace-nowrap" do %>
                
                <span>Publish Only</span>
              <% end %>

            </div>
          </div>
        </div>

      <% else %>
        <!-- Revert to Draft -->
        <%= button_to "Revert to Draft", revert_to_draft_roster_path(@roster), method: :post, class: "px-4 py-2 bg-gray-100 text-gray-700 rounded-3xl hover:bg-gray-200" %>
      <% end %>
    </div>

  </div>
</div>
