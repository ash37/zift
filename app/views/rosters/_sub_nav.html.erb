<div class="bg-white p-4 mb-0">
  <div class="flex flex-col sm:flex-row justify-between sm:items-stretch">

    <!-- Left: Location selector + Date selector -->
    <div class="flex items-center gap-x-4">

      <!-- Location dropdown -->
      <div x-data="{ open: false }" class="relative">
        <button
          type="button"
          @click="open = !open"
          class="h-full flex items-center gap-x-2 px-4 py-3 bg-gray-100 rounded-3xl text-sm font-medium text-gray-700 hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-violet-500"
          aria-haspopup="true"
          :aria-expanded="open.toString()"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-violet-500" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
          </svg>
          <span><%= @current_location&.name || "All Clients" %></span>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </button>

        <!-- Location menu -->
        <div
          x-cloak
          x-show="open"
          x-transition
          @click.outside="open = false"
          @keydown.escape.window="open = false"
          class="absolute z-50 mt-2 w-56 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 focus:outline-none"
          style="display: none;"
        >
          <div class="py-1">
            <%= link_to "All Clients", roster_path(@roster, location_id: nil), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
            <% Location.all.each do |location| %>
              <%= link_to location.name, roster_path(@roster, location_id: location.id), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Date selector -->
      <div class="flex items-center gap-x-1 p-1 bg-gray-100 rounded-3xl">
        <%= link_to show_by_date_rosters_path(date: @roster.starts_on - 7.days, location_id: selected_location_id), class: "p-2 rounded-full hover:bg-gray-200" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        <% end %>

        <div class="px-3 py-1.5 text-center">
          <p class="text-sm font-medium text-gray-700">
            <%= @roster.starts_on.strftime('%-d %b') %> - <%= (@roster.starts_on + 6.days).strftime('%-d %b') %>
          </p>
        </div>

        <%= link_to show_by_date_rosters_path(date: @roster.starts_on + 7.days, location_id: selected_location_id), class: "p-2 rounded-full hover:bg-gray-200" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        <% end %>
      </div>
    </div>

    <!-- Right: Actions -->
    <div class="mt-4 sm:mt-0 flex items-center gap-x-2">
      <%# View toggle: Detail <-> Compact %>
      <% if action_name == 'compact' %>
        <%= link_to roster_path(@roster, location_id: selected_location_id), class: "p-2 rounded-full bg-gray-100 hover:bg-gray-200", title: "Detail view" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-gray-700">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 3.75v4.5m0-4.5h4.5m-4.5 0L9 9M3.75 20.25v-4.5m0 4.5h4.5m-4.5 0L9 15M20.25 3.75h-4.5m4.5 0v4.5m0-4.5L15 9m5.25 11.25h-4.5m4.5 0v-4.5m0 4.5L15 15" />
          </svg>
        <% end %>
      <% else %>
        <%= link_to compact_roster_path(@roster, location_id: selected_location_id), class: "p-2 rounded-full bg-gray-100 hover:bg-gray-200", title: "Compact view" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-gray-700">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 9V4.5M9 9H4.5M9 9 3.75 3.75M9 15v4.5M9 15H4.5M9 15l-5.25 5.25M15 9h4.5M15 9V4.5M15 9l5.25-5.25M15 15h4.5M15 15v4.5m0-4.5 5.25 5.25" />
          </svg>
        <% end %>
      <% end %>
      <% if @roster.draft? %>
        <!-- Copy from previous weeks (1â€“4) -->
        <div x-data="{ open: false }" class="relative">
          <!-- Trigger -->
          <button
            type="button"
            @click="open = !open"
            class="p-2 bg-gray-100 rounded-full hover:bg-gray-200"
            aria-haspopup="true"
            :aria-expanded="open.toString()"
            title="Copy shifts from a previous week"
          >
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-gray-600">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 17.25v3.375c0 .621-.504 1.125-1.125 1.125h-9.75a1.125 1.125 0 0 1-1.125-1.125V7.875c0-.621.504-1.125 1.125-1.125H6.75a9.06 9.06 0 0 1 1.5.124m7.5 10.376h3.375c.621 0 1.125-.504 1.125-1.125V11.25c0-4.46-3.243-8.161-7.5-8.876a9.06 9.06 0 0 0-1.5-.124H9.375c-.621 0-1.125.504-1.125 1.125v3.5m7.5 10.375H9.375a1.125 1.125 0 0 1-1.125-1.125v-9.25m12 6.625v-1.875a3.375 3.375 0 0 0-3.375-3.375h-1.5a1.125 1.125 0 0 1-1.125-1.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H9.75" />
            </svg>
          </button>

          <!-- Dropdown panel -->
          <div
            x-cloak
            x-show="open"
            x-transition
            @click.outside="open = false"
            @keydown.escape.window="open = false"
            class="absolute right-0 top-full mt-2 w-80 sm:w-80 max-w-[80vw] rounded-xl bg-white z-50"
            style="display: none;"
          >
            <div class="p-3 flex flex-col gap-2">
              <%= button_to copy_previous_week_roster_path(@roster, weeks_ago: 1, location_id: selected_location_id),
                    method: :post,
                    class: "w-full inline-flex items-center justify-between gap-2 rounded-3xl px-4 py-2 bg-gray-100 text-gray-700 hover:bg-gray-200" do %>
                
                <span class="text-xs text-gray-500">Copy last week</span>
              <% end %>

              <%= button_to copy_previous_week_roster_path(@roster, weeks_ago: 2, location_id: selected_location_id),
                    method: :post,
                    class: "w-full inline-flex items-center justify-between gap-2 rounded-3xl px-4 py-2 bg-gray-100 text-gray-700 hover:bg-gray-200" do %>
                
                <span class="text-xs text-gray-500">2 weeks ago</span>
              <% end %>

              <%= button_to copy_previous_week_roster_path(@roster, weeks_ago: 3, location_id: selected_location_id),
                    method: :post,
                    class: "w-full inline-flex items-center justify-between gap-2 rounded-3xl px-4 py-2 bg-gray-100 text-gray-700 hover:bg-gray-200" do %>
                
                <span class="text-xs text-gray-500">3 weeks ago</span>
              <% end %>

              <%= button_to copy_previous_week_roster_path(@roster, weeks_ago: 4, location_id: selected_location_id),
                    method: :post,
                    class: "w-full inline-flex items-center justify-between gap-2 rounded-3xl px-4 py-2 bg-gray-100 text-gray-700 hover:bg-gray-200" do %>
                
                <span class="text-xs text-gray-500">4 weeks ago</span>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Publish dropdown (wider) -->
        <div x-data="{ open: false }" class="relative">
          <!-- Trigger -->
          <button
            type="button"
            @click="open = !open"
            class="bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-2 px-4 rounded-3xl"
            aria-haspopup="true"
            :aria-expanded="open.toString()"
          >
            Publish
          </button>

          <!-- Wider dropdown panel -->
          <div
            x-cloak
            x-show="open"
            x-transition
            @click.outside="open = false"
            @keydown.escape.window="open = false"
            class="absolute right-0 top-full mt-2 w-80 sm:w-96 max-w-[99vw] rounded-xl bg-white shadow-lg z-50"
            style="display: none;"
          >
            <div class="p-4 flex flex-col gap-3">

              <!-- Publish and Email -->
              <%= button_to publish_with_email_roster_path(@roster),
                    method: :post,
                    class: "w-full inline-flex items-center justify-center gap-2 rounded-3xl px-8 py-2.5
                            bg-yellow-500 text-white font-medium hover:bg-yellow-600 whitespace-nowrap" do %>
                
                <span>Publish & Email</span>
              <% end %>

              <!-- Publish Only -->
              <%= button_to publish_roster_path(@roster),
                    method: :post,
                    class: "w-full inline-flex items-center justify-center gap-2 rounded-3xl px-5 py-2.5
                            bg-gray-100 text-gray-700 font-medium hover:bg-gray-200 whitespace-nowrap" do %>
                
                <span>Publish Only</span>
              <% end %>

            </div>
          </div>
        </div>

      <% else %>
        <!-- Revert to Draft -->
        <%= button_to "Revert to Draft", revert_to_draft_roster_path(@roster), method: :post, class: "px-4 py-2 bg-gray-100 text-gray-700 rounded-3xl hover:bg-gray-200" %>
      <% end %>
    </div>

  </div>
</div>
