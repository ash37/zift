<div class="bg-white p-4">
  <div class="flex flex-col sm:flex-row justify-between sm:items-stretch">

    <!-- Left: Location selector -->
    <div class="flex items-center gap-x-4">
      <div x-data="{ open: false }" class="relative">
        <button
          @click="open = !open"
          class="p-4 rounded-full bg-gray-100 text-gray-700 hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-violet-500
                 sm:h-full sm:flex sm:items-center sm:gap-x-2 sm:px-4 sm:py-3 sm:rounded-3xl">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-violet-500" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
          </svg>
          <span class="hidden sm:inline"><%= selected_location_id ? Location.find(selected_location_id).name : "All Locations" %></span>
          <svg xmlns="http://www.w3.org/2000/svg" class="hidden sm:block h-5 w-5 text-gray-500" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </button>
        <!-- Dropdown menu omitted for brevity -->
      </div>

      <!-- Date selector -->
      <div class="flex items-center gap-x-1 p-1 bg-gray-100 rounded-3xl">
        <!-- Prev week -->
        <%= link_to show_by_date_rosters_path(date: @roster.starts_on - 7.days, location_id: selected_location_id), class: "p-3 rounded-full hover:bg-gray-200" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        <% end %>

        <!-- Date text -->
        <div class="px-3 py-1.5 text-center">
          <% start_date = @roster.starts_on
             end_date   = start_date + 6.days
             same_month = (start_date.month == end_date.month) && (start_date.year == end_date.year)
             mobile_text = same_month ?
               "#{start_date.strftime('%-d %b')}–#{end_date.strftime('%-d %b')}" :
               "#{start_date.strftime('%-d %b')}–#{end_date.strftime('%-d %b')}"
          %>
          <p class="text-sm font-medium text-gray-700 sm:hidden"><%= mobile_text %></p>
          <p class="hidden sm:block text-sm font-medium text-gray-700">
            <%= start_date.strftime('%-d %b') %> - <%= end_date.strftime('%-d %b') %>
          </p>
        </div>

        <!-- Next week -->
        <%= link_to show_by_date_rosters_path(date: @roster.starts_on + 7.days, location_id: selected_location_id), class: "p-2 rounded-full hover:bg-gray-200" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        <% end %>
      </div>

      <!-- Edit button: separate circle but right after date selector -->
      <% unless @roster.draft? %>
        <%= button_to revert_to_draft_roster_path(@roster), method: :post,
              class: "bg-gray-100 text-gray-700 hover:bg-gray-200
                      p-4 rounded-full
                      sm:px-4 sm:py-2 sm:rounded-3xl flex items-center justify-center gap-2 ml-2" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-gray-700" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path d="M12 20h9" stroke-width="2" stroke-linecap="round"/>
            <path d="M16.5 3.5a2.121 2.121 0 013 3L7 19l-4 1 1-4 12.5-12.5z" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          <span class="hidden sm:inline">Revert to Draft</span>
        <% end %>
      <% end %>
    </div>

    <!-- Right section: only draft-mode actions go here -->
    <div class="mt-4 sm:mt-0 flex items-center gap-x-2">
      <% if @roster.draft? %>
        <!-- Draft-only actions (copy, publish, etc.) -->
      <% end %>
    </div>
  </div>
</div>
