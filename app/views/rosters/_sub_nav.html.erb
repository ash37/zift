<div class="bg-white p-4 rounded-lg shadow-sm mb-6">
  <div class="flex flex-col sm:flex-row justify-between sm:items-center">

    <!-- Left Side: Location Dropdown -->
    <div x-data="{ open: false }" class="relative">
      <button @click="open = !open" class="flex items-center gap-x-2 px-4 py-2 bg-gray-100 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-violet-500">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-violet-500" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
        </svg>
        <span><%= @selected_location_id ? Location.find(@selected_location_id).name : "All Locations" %></span>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </button>

      <div x-show="open" @click.away="open = false" x-transition class="absolute z-10 mt-2 w-56 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 focus:outline-none" style="display: none;">
        <div class="py-1">
          <%= link_to "All Locations", url_for(params.to_unsafe_h.merge(location_id: nil)), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
          <% @locations.each do |location| %>
            <%= link_to location.name, url_for(params.to_unsafe_h.merge(location_id: location.id)), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
          <% end %>
        </div>
      </div>
    </div>


    <!-- Right Side: Date Nav & Actions -->
    <div class="flex items-center gap-x-4 mt-4 sm:mt-0">
      <!-- Date Navigation -->
      <div class="flex items-center gap-x-1 p-1 bg-gray-100 rounded-md">
        <%= link_to show_by_date_rosters_path(date: @roster.starts_on - 7.days, location_id: @selected_location_id), class: "p-2 rounded hover:bg-gray-200" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        <% end %>

        <div class="px-3 py-1.5 text-center">
          <p class="text-sm font-medium text-gray-700">
            <%= @roster.starts_on.strftime('%-d %b') %> - <%= (@roster.starts_on + 6.days).strftime('%-d %b') %>
          </p>
        </div>

        <%= link_to show_by_date_rosters_path(date: @roster.starts_on + 7.days, location_id: @selected_location_id), class: "p-2 rounded hover:bg-gray-200" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        <% end %>
      </div>

      <!-- Status Label -->
      <span class="inline-block px-2 py-1 rounded text-white text-xs <%= @roster.draft? ? 'bg-yellow-500' : 'bg-green-600' %>">
        <%= @roster.status_label %>
      </span>

      <!-- Action Buttons -->
      <div class="flex gap-3 items-center">
        <% if @roster.draft? %>
          <%= button_to "Copy", copy_previous_week_roster_path(@roster), method: :post, class: "bg-white border border-zinc-200 hover:bg-zinc-100 text-zinc-700 text-sm px-4 py-2 rounded-md shadow-sm" %>
          <%= button_to "Publish", publish_roster_path(@roster), method: :post, class: "bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-2 rounded-md text-sm font-semibold shadow-sm" %>
        <% else %>
          <%= button_to "Revert to Draft", revert_to_draft_roster_path(@roster), method: :post, class: "bg-white border border-zinc-200 hover:bg-zinc-100 text-zinc-700 text-sm px-4 py-2 rounded-md shadow-sm" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
