<div class="bg-white p-6">
  <div class="flex flex-row justify-between items-center">

    <!-- Left: Location selector -->
    <div x-data="{ open: false }" class="relative">
      <button
        @click="open = !open"
        class="p-3 rounded-full bg-gray-100 text-gray-700 hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-violet-500
               sm:h-full sm:flex sm:items-center sm:gap-x-2 sm:px-4 sm:py-2 sm:rounded-3xl">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-violet-500" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
        </svg>
        <span class="hidden sm:inline"><%= selected_location_id ? Location.find(selected_location_id).name : "All Locations" %></span>
        <svg xmlns="http://www.w3.org/2000/svg" class="hidden sm:block h-5 w-5 text-gray-500" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </button>
      <div x-show="open" @click.away="open = false" x-transition
           class="absolute z-10 mt-2 w-56 rounded-lg shadow-md bg-white focus:outline-none"
           style="display: none;">
        <div class="py-1">
          <%= link_to "All Locations", roster_path(@roster, location_id: nil), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
          <% Location.all.each do |location| %>
            <%= link_to location.name, roster_path(@roster, location_id: location.id), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Center: Date selector -->
    <div class="flex items-center gap-x-1 p-1 bg-gray-100 rounded-3xl">
      <%= link_to show_by_date_rosters_path(date: @roster.starts_on - 7.days, location_id: selected_location_id), class: "p-2 rounded-full hover:bg-gray-200" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      <% end %>

      <div class="px-3 py-1.5 text-center">
        <p class="text-sm font-medium text-gray-700"><%= @roster.starts_on.strftime('%-d') %> - <%= (@roster.starts_on + 6.days).strftime('%-d %b') %></p>
      </div>

      <%= link_to show_by_date_rosters_path(date: @roster.starts_on + 7.days, location_id: selected_location_id), class: "p-2 rounded-full hover:bg-gray-200" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      <% end %>
    </div>

    <!-- Right: Publish/Revert -->
    <div class="flex items-center gap-x-2">
      <% if @roster.draft? %>
        <!-- Publish: mobile round icon, desktop pill with label -->
        <%= button_to publish_roster_path(@roster), method: :post,
              class: "p-3 rounded-full bg-gray-100 hover:bg-gray-200
                      sm:px-4 sm:py-2 sm:rounded-3xl flex items-center justify-center gap-2 text-gray-700" do %>
          <!-- Yellow rocket icon -->
          
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-violet-500">
  <path stroke-linecap="round" stroke-linejoin="round" d="M15.59 14.37a6 6 0 0 1-5.84 7.38v-4.8m5.84-2.58a14.98 14.98 0 0 0 6.16-12.12A14.98 14.98 0 0 0 9.631 8.41m5.96 5.96a14.926 14.926 0 0 1-5.841 2.58m-.119-8.54a6 6 0 0 0-7.381 5.84h4.8m2.581-5.84a14.927 14.927 0 0 0-2.58 5.84m2.699 2.7c-.103.021-.207.041-.311.06a15.09 15.09 0 0 1-2.448-2.448 14.9 14.9 0 0 1 .06-.312m-2.24 2.39a4.493 4.493 0 0 0-1.757 4.306 4.493 4.493 0 0 0 4.306-1.758M16.5 9a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0Z" />
</svg>

          <span class="hidden sm:inline">Publish</span>
        <% end %>
      <% else %>
        <!-- Revert to Draft: mobile round pencil icon, desktop pill with label -->
        <%= button_to revert_to_draft_roster_path(@roster), method: :post,
              class: "p-3 rounded-full bg-gray-100 text-gray-700 hover:bg-gray-200
                      sm:px-4 sm:py-2 sm:rounded-3xl flex items-center justify-center gap-2" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-gray-700" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path d="M12 20h9" stroke-width="2" stroke-linecap="round"/>
            <path d="M16.5 3.5a2.121 2.121 0 013 3L7 19l-4 1 1-4 12.5-12.5z" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          <span class="hidden sm:inline">Revert to Draft</span>
        <% end %>
      <% end %>

      <!-- Copy: dropdown to copy from previous N weeks (1-4) -->
      <div x-data="{ openCopy: false }" class="relative">
        <button @click="openCopy = !openCopy"
                class="p-3 rounded-full bg-gray-100 text-gray-700 hover:bg-gray-200 sm:px-4 sm:py-2 sm:rounded-3xl flex items-center justify-center gap-2">
          <!-- Clipboard icon -->
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="w-5 h-5 text-violet-500">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 3.75A1.5 1.5 0 0 1 10.5 2.25h3A1.5 1.5 0 0 1 15 3.75M9 3.75A2.25 2.25 0 0 0 6.75 6v11.25A2.25 2.25 0 0 0 9 19.5h6a2.25 2.25 0 0 0 2.25-2.25V6A2.25 2.25 0 0 0 15 3.75M9 3.75h6" />
          </svg>
          <span class="hidden sm:inline">Copy</span>
          <svg xmlns="http://www.w3.org/2000/svg" class="hidden sm:block h-5 w-5 text-gray-500" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </button>
        <div x-show="openCopy" @click.away="openCopy = false" x-transition
             class="absolute right-0 z-10 mt-2 w-56 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 focus:outline-none"
             style="display: none;">
          <div class="py-1">
            <% (1..4).each do |w| %>
              <%= button_to copy_previous_week_roster_path(@roster, weeks_ago: w, location_id: selected_location_id),
                    method: :post,
                    form: { data: { turbo: true } },
                    class: "w-full text-left block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
                Copy from <%= w %> week<%= 's' if w > 1 %> ago
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
