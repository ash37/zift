<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <section class="relative max-w-4xl p-6 mx-auto bg-white rounded-md shadow-md">
    <%= link_to location_path(@location), class: "absolute top-0 right-0 mt-4 mr-4 text-gray-400 hover:text-gray-600" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
      </svg>
    <% end %>

    <h2 class="text-lg font-semibold text-gray-700 capitalize">Edit Area</h2>
    
    <%= render "form", location: @location, area: @area %>

    <div class="flex justify-end mt-6">
      <%= button_to "Delete Area",
          location_area_path(@location, @area),
          method: :delete,
          data: { confirm: "Are you sure you want to delete this area?" },
          class: "px-4 py-2 text-sm font-semibold bg-white text-red-600 border border-red-600 rounded-3xl hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
    </div>
  </section>
</div>