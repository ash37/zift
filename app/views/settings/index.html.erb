<% content_for :title, "Settings" %>

<section class="container mx-auto px-4 py-8">
  <div class="bg-white rounded-2xl p-6">
    <h1 class="text-2xl font-bold text-gray-800 mb-4">Settings</h1>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <%= link_to admin_xero_connection_path, class: "block p-4 rounded-xl border border-gray-200 hover:bg-gray-50" do %>
        <div class="text-lg font-semibold text-gray-800">Xero Connection</div>
        <div class="text-sm text-gray-500">Manage the Xero OAuth connection</div>
      <% end %>

      <%= link_to shift_questions_path, class: "block p-4 rounded-xl border border-gray-200 hover:bg-gray-50" do %>
        <div class="text-lg font-semibold text-gray-800">Shift Questions</div>
        <div class="text-sm text-gray-500">Configure questions shown on shifts</div>
      <% end %>

      <%= link_to admin_agreements_path, class: "block p-4 rounded-xl border border-gray-200 hover:bg-gray-50" do %>
        <div class="text-lg font-semibold text-gray-800">Agreements</div>
        <div class="text-sm text-gray-500">Manage employment and service agreements</div>
      <% end %>

      <div class="block p-4 rounded-xl border border-gray-200" data-controller="push" data-push-subscribed-value="false">
        <div class="flex items-center justify-between">
          <div>
            <div class="text-lg font-semibold text-gray-800">Push Notifications</div>
            <div class="text-sm text-gray-500">Enable browser push reminders</div>
          </div>
          <button data-push-target="button" data-action="push#enable" class="px-3 py-1.5 rounded-lg bg-violet-600 text-white text-sm shadow-sm hover:bg-violet-700">Enable</button>
        </div>
        <div class="mt-2 text-xs text-gray-500">Status: <span data-push-target="status">Disabled</span></div>
      </div>
    </div>
  </div>
</section>
