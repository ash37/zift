<% content_for :title, "Showing shift" %>

<section class="container relative px-4 py-4 mx-auto">
  <div class="w-full max-w-sm px-4 py-3 mx-auto bg-white rounded-2xl">
    <div class="flex items-center justify-between">
      <h1 class="text-lg font-bold text-gray-800"><%= @shift.location.name %></h1>
      <%= link_to dashboards_path, class: "text-gray-400 hover:text-gray-600" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
      <% end %>
    </div>

    <div>
      <div class="flex items-center mt-2 bg-violet-100 rounded-3xl p-1">
        <div class="flex-shrink-0 w-6 h-6 flex items-center justify-center bg-violet-100 rounded-full">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-violet-800" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        </div>
        <p class="ml-2 text-violet-800"><%= @shift.location.address %></p>
      </div>
      <p class="ml-4 mt-2 text-lg font-bold text-gray-800">Shift: <%= format_shift_time(@shift.start_time) %> - <%= format_shift_time(@shift.end_time) %></p>
    </div>
    <p class="ml-4 mt-2 text-md text-gray-600"><%= @shift.area&.name %></p>
    <% if @shift.note.present? %>
      <p class="ml-4 text-md text-gray-600"><em><%= @shift.note %></em></p>
    <% end %>

    <div class="mt-4 space-y-2">
      <% if @shift.location.support_plan.attached? %>
        <div class="flex items-center">
          <%= link_to rails_blob_path(@shift.location.support_plan, disposition: :inline),
              class: "inline-flex items-center gap-1 text-sm font-medium text-violet-700 hover:text-violet-900", target: "_blank", rel: "noopener" do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="m11.25 11.25.041-.02a.75.75 0 0 1 1.063.852l-.708 2.836a.75.75 0 0 0 1.063.853l.041-.021M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9-3.75h.008v.008H12V8.25Z" />
            </svg>
            View Support Plan
          <% end %>
        </div>
      <% end %>

      <% if @shift.location.risk_assessment.attached? %>
        <div class="flex items-center">
          <%= link_to rails_blob_path(@shift.location.risk_assessment, disposition: :inline),
              class: "inline-flex items-center gap-1 text-sm font-medium text-violet-700 hover:text-violet-900", target: "_blank", rel: "noopener" do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="m11.25 11.25.041-.02a.75.75 0 0 1 1.063.852l-.708 2.836a.75.75 0 0 0 1.063.853l.041-.021M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9-3.75h.008v.008H12V8.25Z" />
            </svg>
            View Risk Assessment
          <% end %>
        </div>
      <% end %>

      <div class="flex justify-end">
        <span class="px-3 py-1 text-xs text-violet-800 uppercase bg-violet-200 rounded-full"><%= @shift.start_time.strftime("%a, %d %b") %></span>
      </div>
    </div>
  </div>
</section>
