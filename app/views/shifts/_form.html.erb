<%= form_with(model: shift, class: "contents") do |form| %>
  <% if shift.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(shift.errors.count, "error") %> prohibited this shift from being saved:</h2>

      <ul class="list-disc ml-6">
        <% shift.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": shift.errors[:user_id].none?, "border-red-400 focus:outline-red-600": shift.errors[:user_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :location_id %>
    <%= form.text_field :location_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": shift.errors[:location_id].none?, "border-red-400 focus:outline-red-600": shift.errors[:location_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :roster_id %>
    <%= form.text_field :roster_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": shift.errors[:roster_id].none?, "border-red-400 focus:outline-red-600": shift.errors[:roster_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :start_time %>
    <%= form.datetime_field :start_time, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": shift.errors[:start_time].none?, "border-red-400 focus:outline-red-600": shift.errors[:start_time].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :end_time %>
    <%= form.datetime_field :end_time, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": shift.errors[:end_time].none?, "border-red-400 focus:outline-red-600": shift.errors[:end_time].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :recurrence_id %>
    <%= form.number_field :recurrence_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": shift.errors[:recurrence_id].none?, "border-red-400 focus:outline-red-600": shift.errors[:recurrence_id].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
