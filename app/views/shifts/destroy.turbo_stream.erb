<% compact_view = request.referer.to_s.include?("/rosters/") && request.referer.to_s.include?("/compact") %>
<%= turbo_stream.replace dom_id(@roster, "cell_content_#{@user.id}_#{@shift.start_time.to_date}") do %>
  <%= render (compact_view ? 'rosters/compact_cell_content' : 'rosters/cell_content'), roster: @roster, user: @user, date: @shift.start_time.to_date, selected_location_id: @selected_location_id, compact: compact_view %>
<% end %>
<%= turbo_stream.replace dom_id(@user, 'hours_total') do %>
  <%= render 'rosters/user_hours', roster: @roster, user: @user, selected_location_id: @selected_location_id %>
<% end %>
<%= turbo_stream.replace dom_id(@roster, "daily_hours_#{@shift.start_time.to_date.to_s}") do %>
  <%= render 'rosters/daily_hours', roster: @roster, date: @shift.start_time.to_date, selected_location_id: @selected_location_id %>
<% end %>
<%= turbo_stream.replace "assign_shift_modal", "" %>
