<% content_for :title, @user.name %>

<div class="bg-zinc-100 min-h-screen">
  <section class="container mx-auto px-4 py-10">
    <div class="w-full max-w-4xl mx-auto">

      <div class="bg-white rounded-2xl p-6 flex items-center justify-between">
        <div class="flex items-center min-w-0">
          <div class="text-left">
            <h1 class="text-2xl font-bold text-gray-800 truncate"><%= @user.name %></h1>
            <p class="text-gray-600 break-all sm:break-normal"><%= @user.email %></p>
            <p class="text-gray-600 break-all sm:break-normal"><%= @user.phone %></p>
          </div>
        </div>
        <div class="ml-4 flex items-center gap-3">
          <% unless current_user.employee? && current_user == @user %>
            <%= link_to "Edit", edit_user_path(@user), class: "text-violet-700" %>
          <% end %>
          <% if current_user&.admin? || current_user&.manager? %>
            <% if @user.respond_to?(:archived?) && @user.archived? %>
              <%= button_to "Restore", restore_user_path(@user), method: :patch, class: "px-3 py-1 rounded-full text-sm bg-green-100 text-green-700" %>
            <% else %>
              <%= button_to "Archive", archive_user_path(@user), method: :patch, data: { turbo_confirm: "Archive this user?" }, class: "px-3 py-1 rounded-full text-sm bg-red-100 text-red-700" %>
            <% end %>
          <% end %>
        </div>
      </div>

      <%# Employment agreement link for employees %>
      <% if @user.employee? %>
        <% current_employment_agreement = Agreement.current_for('employment') %>
        <% acceptance = current_employment_agreement && AgreementAcceptance.find_by(user: @user, agreement: current_employment_agreement) %>
        <div class="mt-4 bg-white rounded-2xl p-4">
          <div class="flex items-center justify-between">
            <div>
              <div class="text-gray-800 font-semibold">Employment Agreement</div>
              <% if acceptance.present? %>
                <div class="text-sm text-green-600">Complete — signed <%= acceptance.signed_at.strftime('%-d %b %Y') %></div>
              <% else %>
                <div class="text-sm text-orange-500">Outstanding — please review and accept</div>
              <% end %>
            </div>
            <% if current_employment_agreement.present? %>
              <%= link_to "View", agreement_path('employment', user_id: @user.id), class: "px-3 py-1 rounded-lg bg-gray-600 text-white hover:bg-gray-700" %>
            <% end %>
          </div>

          <%# Required uploads %>
          <% def status_icon(attached) %>
            if attached
              raw('<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 text-green-600"><path fill-rule="evenodd" d="M2.25 12c0-5.385 4.365-9.75 9.75-9.75s9.75 4.365 9.75 9.75-4.365 9.75-9.75 9.75S2.25 17.385 2.25 12Zm13.36-1.814a.75.75 0 10-1.22-.872l-3.236 4.53L9.53 12.22a.75.75 0 00-1.06 1.06l2.25 2.25a.75.75 0 001.14-.094l3.75-5.25z" clip-rule="evenodd"/></svg>')
            else
              raw('<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 text-orange-500"><path d="M12 2.25a9.75 9.75 0 100 19.5 9.75 9.75 0 000-19.5zM11.25 6h1.5v7.5h-1.5V6zm0 9h1.5v1.5h-1.5V15z"/></svg>')
            end
          end %>

          <div class="mt-4 grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="p-3 rounded-xl border border-gray-200">
              <div class="flex items-center justify-between">
                <div class="font-medium text-gray-800">NDIS screening card</div>
                <div><%= status_icon(@user.ndis_screening_card.attached?) %></div>
              </div>
              <div class="mt-2 text-sm text-gray-600">Upload a clear photo or PDF of your valid NDIS screening card.</div>
              <% if current_user == @user || current_user&.admin? %>
                <%= form_with model: @user, url: user_path(@user), method: :patch, html: { multipart: true }, local: true, class: "mt-2" do |f| %>
                  <div class="flex items-center gap-2">
                    <%= f.file_field :ndis_screening_card, direct_upload: false, class: "text-sm" %>
                    <%= f.submit (@user.ndis_screening_card.attached? ? "Replace" : "Upload"), class: "px-3 py-1 rounded-lg bg-gray-100 text-gray-800 hover:bg-gray-200 text-sm" %>
                  </div>
                <% end %>
                <% if @user.ndis_screening_card.attached? %>
                  <div class="mt-2 flex items-center gap-3 text-sm">
                    <%= link_to @user.ndis_screening_card.filename, rails_blob_path(@user.ndis_screening_card, disposition: "attachment"), class: "text-violet-700 hover:underline" %>
                    <%= button_to "Remove", remove_attachment_user_path(@user, name: :ndis_screening_card), method: :delete, class: "px-2 py-1 rounded bg-red-50 text-red-700" %>
                  </div>
                <% end %>
              <% end %>
            </div>

            <div class="p-3 rounded-xl border border-gray-200">
              <div class="flex items-center justify-between">
                <div class="font-medium text-gray-800">Two forms of ID</div>
                <div><%= status_icon(@user.id_documents.attachments.any?) %></div>
              </div>
              <div class="mt-2 text-sm text-gray-600">Upload two separate IDs (e.g. licence, passport, Medicare). You can select multiple files.</div>
              <% if current_user == @user || current_user&.admin? %>
                <%= form_with model: @user, url: user_path(@user), method: :patch, html: { multipart: true }, local: true, class: "mt-2" do |f| %>
                  <div class="flex items-center gap-2">
                    <%= f.file_field :id_documents, multiple: true, direct_upload: false, class: "text-sm" %>
                    <%= f.submit (@user.id_documents.attachments.any? ? "Add/Replace" : "Upload"), class: "px-3 py-1 rounded-lg bg-gray-100 text-gray-800 hover:bg-gray-200 text-sm" %>
                  </div>
                <% end %>
                <% if @user.id_documents.attachments.any? %>
                  <ul class="mt-2 text-sm text-gray-700 list-disc list-inside">
                    <% @user.id_documents.each_with_index do |doc, idx| %>
                      <li>
                        <%= link_to (doc.filename.presence || "ID Document ##{idx+1}"), rails_blob_path(doc, disposition: "attachment"), class: "text-violet-700 hover:underline" %>
                        <%= button_to "Remove", remove_id_document_user_path(@user, signed_id: doc.blob.signed_id), method: :delete, form: { data: { turbo_confirm: "Remove this document?" } }, class: "ml-2 px-2 py-0.5 rounded bg-red-50 text-red-700 inline-block" %>
                      </li>
                    <% end %>
                  </ul>
                <% end %>
              <% end %>
            </div>

            <div class="p-3 rounded-xl border border-gray-200">
              <div class="flex items-center justify-between">
                <div class="font-medium text-gray-800">NDIS worker orientation certificate</div>
                <div><%= status_icon(@user.ndis_orientation_certificate.attached?) %></div>
              </div>
              <div class="mt-2 text-sm text-gray-600">Upload your NDIS worker orientation certificate.</div>
              <% if current_user == @user || current_user&.admin? %>
                <%= form_with model: @user, url: user_path(@user), method: :patch, html: { multipart: true }, local: true, class: "mt-2" do |f| %>
                  <div class="flex items-center gap-2">
                    <%= f.file_field :ndis_orientation_certificate, direct_upload: false, class: "text-sm" %>
                    <%= f.submit (@user.ndis_orientation_certificate.attached? ? "Replace" : "Upload"), class: "px-3 py-1 rounded-lg bg-gray-100 text-gray-800 hover:bg-gray-200 text-sm" %>
                  </div>
                <% end %>
                <% if @user.ndis_orientation_certificate.attached? %>
                  <div class="mt-2 flex items-center gap-3 text-sm">
                    <%= link_to @user.ndis_orientation_certificate.filename, rails_blob_path(@user.ndis_orientation_certificate, disposition: "attachment"), class: "text-violet-700 hover:underline" %>
                    <%= button_to "Remove", remove_attachment_user_path(@user, name: :ndis_orientation_certificate), method: :delete, class: "px-2 py-1 rounded bg-red-50 text-red-700" %>
                  </div>
                <% end %>
              <% end %>
            </div>

            <div class="p-3 rounded-xl border border-gray-200">
              <div class="flex items-center justify-between">
                <div class="font-medium text-gray-800">Qcare induction certificate</div>
                <div><%= status_icon(@user.qcare_induction_certificate.attached?) %></div>
              </div>
              <div class="mt-2 text-sm text-gray-600">Upload your Qcare induction certificate.</div>
              <% if current_user == @user || current_user&.admin? %>
                <%= form_with model: @user, url: user_path(@user), method: :patch, html: { multipart: true }, local: true, class: "mt-2" do |f| %>
                  <div class="flex items-center gap-2">
                    <%= f.file_field :qcare_induction_certificate, direct_upload: false, class: "text-sm" %>
                    <%= f.submit (@user.qcare_induction_certificate.attached? ? "Replace" : "Upload"), class: "px-3 py-1 rounded-lg bg-gray-100 text-gray-800 hover:bg-gray-200 text-sm" %>
                  </div>
                <% end %>
                <% if @user.qcare_induction_certificate.attached? %>
                  <div class="mt-2 flex items-center gap-3 text-sm">
                    <%= link_to @user.qcare_induction_certificate.filename, rails_blob_path(@user.qcare_induction_certificate, disposition: "attachment"), class: "text-violet-700 hover:underline" %>
                    <%= button_to "Remove", remove_attachment_user_path(@user, name: :qcare_induction_certificate), method: :delete, class: "px-2 py-1 rounded bg-red-50 text-red-700" %>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <% if @user.locations.any? %>
        <div class="mt-4 bg-white rounded-3xl p-6 sm:p-8">
          <h2 class="text-xl font-bold text-gray-800 mb-4">Locations</h2>
          <div class="flex flex-wrap gap-2">
            <% @user.locations.each do |location| %>
              <span class="inline-flex items-center rounded-3xl px-3 py-1 text-sm font-medium bg-violet-100 text-violet-700">
                <%= location.name %>
              </span>
            <% end %>
          </div>
        </div>
      <% end %>

<% if [User::STATUSES[:applicant], User::STATUSES[:contacted]].include?(@user.status) %>
        <%= render 'users/applicant_details', user: @user %>
     <% elsif @user.role == 'employee' %>
        <%= render 'users/employee_details', user: @user %>
     <% elsif (current_user&.respond_to?(:admin?) ? current_user.admin? : current_user&.role == 'admin') %>
        <%= render 'users/employee_admin_details', user: @user %>
     <% end %>

      <% unless @user.status == User::STATUSES[:applicant] %>
      <div class="mt-8">
        <h3 class="text-lg font-bold text-gray-700 mb-4 flex items-center justify-between">
          Upcoming Shifts
          <a href="#upcoming-shifts" onclick="document.getElementById('upcoming-shifts').classList.toggle('hidden'); this.querySelector('svg').classList.toggle('rotate-180'); return false;">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="h-6 w-6 text-gray-500 transition-transform duration-300">
              <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 10.94l3.71-3.71a.75.75 0 111.06 1.06l-4.24 4.24a.75.75 0 01-1.06 0L5.21 8.29a.75.75 0 01.02-1.08z" clip-rule="evenodd" />
            </svg>
          </a>
        </h3>
        <div id="upcoming-shifts" class="bg-white rounded-2xl p-6 hidden">
          <% if @upcoming_shifts.any? %>
            <ul class="space-y-4">
              <% @upcoming_shifts.each do |shift| %>
                <li class="flex justify-between items-center">
                  <div>
                    <p class="font-semibold"><%= shift.location.name %></p>
                    <p class="text-sm text-gray-600"><%= shift.start_time.strftime("%a, %d %b") %>: <%= format_shift_time(shift.start_time) %> - <%= format_shift_time(shift.end_time) %></p>
                  </div>
                  <span class="px-3 py-1 text-xs text-violet-800 uppercase bg-violet-200 rounded-full"><%= shift.area&.name || "General" %></span>
                </li>
              <% end %>
            </ul>
          <% else %>
            <p class="text-gray-500">No upcoming shifts scheduled.</p>
          <% end %>
        </div>
      </div>

      <div class="mt-8">
        <h3 class="text-lg font-bold text-gray-700 mb-4 flex items-center justify-between">
          Approved Unavailability
          <a href="#approved-unavailability" onclick="document.getElementById('approved-unavailability').classList.toggle('hidden'); this.querySelector('svg').classList.toggle('rotate-180'); return false;">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="h-6 w-6 text-gray-500 transition-transform duration-300">
              <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 10.94l3.71-3.71a.75.75 0 111.06 1.06l-4.24 4.24a.75.75 0 01-1.06 0L5.21 8.29a.75.75 0 01.02-1.08z" clip-rule="evenodd" />
            </svg>
          </a>
        </h3>
        <div id="approved-unavailability" class="hidden">
        <% if @unavailability_requests.any? %>
          <% @unavailability_requests.each do |request| %>
            <div class="bg-white rounded-2xl p-6 mb-4">
              <p class="font-semibold"><%= request.starts_at.strftime("%^b %e") %> - <%= request.ends_at.strftime("%^b %e, %Y") %></p>
              <p class="text-sm text-gray-600"><%= request.reason %></p>
            </div>
          <% end %>
        <% else %>
          <p class="text-gray-500">No approved unavailability requests.</p>
        <% end %>
        </div>
      </div>
      <% end %>

    </div>
  </section>
</div>
