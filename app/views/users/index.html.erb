<% content_for :title, "Users" %>
<% if current_user.admin? || current_user.manager? %>
  <div class="mb-4">
    <%= link_to "Employees", users_path, class: "px-3 py-2 rounded-md #{params[:filter].nil? ? 'bg-violet-500 text-white' : 'bg-gray-200 text-gray-700'}" %>
    <%= link_to "Applicants", users_path(filter: 'applicants'), class: "px-3 py-2 rounded-md #{params[:filter] == 'applicants' ? 'bg-violet-500 text-white' : 'bg-gray-200 text-gray-700'}" %>
    <%= link_to "Contacted", users_path(filter: 'contacted'), class: "px-3 py-2 rounded-md #{params[:filter] == 'contacted' ? 'bg-violet-500 text-white' : 'bg-gray-200 text-gray-700'}" %>
    <%= link_to "Ended", users_path(filter: 'ended'), class: "px-3 py-2 rounded-md #{params[:filter] == 'ended' ? 'bg-violet-500 text-white' : 'bg-gray-200 text-gray-700'}" %>
  </div>
<% end %>
<section class="container px-4 py-4 mx-auto">
  <div class="flex justify-between items-center">
    <%# Left Side: Title and user count %>
    <div class="flex items-center gap-x-3">
      <h2 class="text-lg font-medium text-gray-800">Team</h2>
      
    </div>

    <%# Right Side: Add user button %>
    <% if current_user.admin? || current_user.manager? %>
      <div>
        <%= link_to "Add", admin_new_user_path, class: "tracking-wide rounded-3xl px-3.5 py-2.5 bg-zinc-800 hover:bg-zinc-900 text-white" %>
      </div>
    <% end %>
  </div>

  <div class="flex flex-col mt-6">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
        <div class="overflow-hidden border border-gray-200 md:rounded-lg">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Name
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Phone
                </th>
                <%# FIX: Hide this column on mobile screens %>
                <th scope="col" class="hidden sm:table-cell px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Role
                </th>
                <%# FIX: Hide this column on mobile screens %>
                <th scope="col" class="hidden sm:table-cell relative px-6 py-3">
                  <span class="sr-only">Actions</span>
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @users.each do |user| %>
                <%# FIX: Add Stimulus controller and data attributes to make the row clickable %>
                <% if current_user.admin? || current_user.manager? %>
                  <tr data-controller="clickable-row"
                      data-action="click->clickable-row#visit"
                      data-clickable-row-url-value="<%= user_path(user) %>"
                      class="cursor-pointer hover:bg-gray-50">
                <% else %>
                  <tr class="hover:bg-gray-50">
                <% end %>

                  <td class="px-4 py-4 text-sm font-medium text-gray-700 whitespace-nowrap">
                    <div class="flex items-center gap-x-2">
                      <div>
                        <h2 class="font-medium text-gray-800"><%= user.name %></h2>
                      </div>
                    </div>
                  </td>
                  <td class="px-4 py-4 text-sm text-gray-500 whitespace-nowrap"><%= user.phone %></td>
                  <%# FIX: Hide this column on mobile screens %>
                  <td class="hidden sm:table-cell px-4 py-4 text-sm text-gray-500 whitespace-nowrap"><%= user.role_name %></td>
                  <%# FIX: Hide this column on mobile screens %>
                  <td class="hidden sm:table-cell px-4 py-4 text-sm whitespace-nowrap">
                    <div class="flex items-center gap-x-3">
                      <%= link_to edit_user_path(user), class: "text-gray-500 hover:text-yellow-500" do %>
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931z" />
                        </svg>
                      <% end %>
                      <%= button_to user, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "text-gray-500 hover:text-red-500" do %>
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916" />
                        </svg>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>